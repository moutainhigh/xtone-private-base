<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <!-- android:background="@drawable/custom_corner_white_bg"-->

    <RelativeLayout

        android:background="@drawable/umeng_xp_download_dialog_bg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:orientation="vertical">


        <ImageView

            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/search_dialog_imge_icon"

            />

        <TextView
            android:id="@+id/search_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红心灿烂"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/search_dialog_imge_icon"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/search_dialog_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/silver"
            android:textSize="14sp"
            android:text="曹其明"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/search_dialog_imge_icon"
            android:layout_marginTop="50dp"



            />

        <TextView
            android:id="@+id/search_dialog_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/silver"
            android:textSize="14sp"
            android:text="价格：6元"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/search_dialog_imge_icon"
            android:layout_below="@+id/search_dialog_author"

            />


        <LinearLayout
            android:id="@+id/lin"
            android:layout_below="@+id/search_dialog_imge_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
  <Button
      android:id="@+id/search_dialog_pr"
      android:layout_width="70dp"
      android:layout_height="25dp"
      android:background="@drawable/search_dialog_pr"

      android:layout_marginLeft="35dp"
      />

            <Button

                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/search_dialog_pu"

                android:layout_marginLeft="35dp"
                />
        </LinearLayout>

       <LinearLayout
           android:layout_below="@id/lin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="15dp"
           android:orientation="vertical"
           >

           <TextView
               android:id="@+id/search_dialog_fg"
               android:layout_width="wrap_content"
               android:layout_height="2dp"
               android:background="@drawable/fg"
               />


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="简介"
               android:textSize="14sp"
               android:textColor="@color/silver"
               android:layout_marginTop="5dp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="60dp"
               android:textColor="@color/silver"
               android:textSize="12sp"
               android:ellipsize="end"
               android:maxLines="4"
               android:text="科圃精耕二十年，潇湘帜艳领时先。能将余热开新韵，再把激情化锦篇。老凤长鸣存晚节，金风玉笛奏和弦。欣看硕果桑榆景，遍野花香任鸟喧"
               android:layout_marginTop="3dp"
               android:layout_marginLeft="10dp"

               />


       </LinearLayout>




    </RelativeLayout>


    <TextView
        android:id="@+id/search_dialog_tv_confirm"




        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"

        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/umeng_xp_download_dialog_close_selector"
        />
</RelativeLayout>
