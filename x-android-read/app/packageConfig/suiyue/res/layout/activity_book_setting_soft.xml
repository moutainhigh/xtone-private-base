<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_soft_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/block_column_7"
    android:orientation="vertical" >

    <include layout="@layout/layout_head_soft" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/block_column_6" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:fadingEdge="none"
        android:scrollbarThumbVertical="@drawable/scrollbar_bg"
        android:background="@color/block_column_7"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="常用功能"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                     android:background="@drawable/fg" />

                <RelativeLayout
                    android:id="@+id/rl_soft_skin"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/transparent_orange_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:text="软件皮肤"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                 android:background="@drawable/fg" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="86px"
                android:background="@color/block_column_7" >

                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/su"

                    />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="下载设置"
                    android:textColor="@color/block_column_4"
                    android:textSize="24px" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                 android:background="@drawable/fg" />

            <RelativeLayout
                android:id="@+id/rl_custom_download_path"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25px"
                        android:text="自定义书籍下载目录"
                        android:textColor="@color/block_column_5"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_custom_download_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:text="scard/ssss"
                        android:textColor="@color/block_column_5"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="40px"
                 android:background="@color/block_column_7" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="90px"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25px"
                    android:text="下载后自动添加到书架"
                    android:textColor="@color/block_column_5"
                    android:textSize="28px" />

                <ToggleButton
                    android:id="@+id/tb_auto_put_to_shelf"
                    style="@style/set_switch_button"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25px" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/white" >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0dp"
                 android:background="@drawable/fg" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_clear_cache"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25px"
                    android:text="清除缓存"
                    android:textColor="@color/block_column_5"
                    android:textSize="28px" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                 android:background="@drawable/fg" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="86px"
                android:background="@color/block_column_7" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="其他"
                    android:textColor="@color/block_column_4"
                    android:textSize="24px" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                 android:background="@drawable/fg" />

            <RelativeLayout
                android:id="@+id/rl_about_us"
                android:layout_width="fill_parent"
                android:layout_height="90px"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25px"
                    android:text="关于我们"
                    android:textColor="@color/block_column_5"
                    android:textSize="28px" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/white" >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0dp"
                 android:background="@drawable/fg" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_check_update"
                android:layout_width="fill_parent"
                android:layout_height="90px"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25px"
                    android:text="检查更新"
                    android:textColor="@color/block_column_5"
                    android:textSize="28px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/white" >
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/fg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_set_default"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25px"
                    android:text="恢复默认"
                    android:textColor="@color/block_column_5"
                    android:textSize="28px" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                 android:background="@drawable/fg" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>